@page
@model TheJawaShop.Pages.AdminPages.CreateUser

@{
    ViewData["Title"] = "Create New User";
}

<h1>Add new User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TheUser.UserName" class="control-label"></label>
                <input asp-for="TheUser.UserName" class="form-control" />
                <span asp-validation-for="TheUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheUser.UserPassword" class="control-label"></label>
                <input asp-for="TheUser.UserPassword" class="form-control" />
                <span asp-validation-for="TheUser.UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ManageUser">Back to Users</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
